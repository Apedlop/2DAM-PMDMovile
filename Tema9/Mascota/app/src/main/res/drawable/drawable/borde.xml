<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra difuminada -->
    <item>
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="#18000000" /> <!-- Color de la sombra -->
        </shape>
    </item>
    <!-- Contenido encima -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/titulo" />
            <stroke android:width="4dp" android:color="@color/titulo" />
        </shape>
    </item>
</layer-list>
