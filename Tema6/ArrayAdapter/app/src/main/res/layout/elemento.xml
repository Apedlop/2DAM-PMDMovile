<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Texto principal -->
    <TextView
        android:id="@+id/miTexto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/miTexto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#757575" />

    <!-- Imagen cargada desde recursos locales (drawable) -->
    <ImageView
        android:id="@+id/miImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="Descripción" />

    <!-- Enlace de texto, abre una URL al hacer clic -->
    <TextView
        android:id="@+id/miEnlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir enlace"
        android:textColor="#1E88E5"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <!-- CheckBox -->
    <CheckBox
        android:id="@+id/miCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar opción"
        android:layout_marginTop="8dp" />

    <!-- RadioButton -->
    <RadioButton
        android:id="@+id/miRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elegir opción"
        android:layout_marginTop="8dp" />

</LinearLayout>
