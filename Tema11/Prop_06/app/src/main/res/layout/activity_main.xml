<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#F8EDEB"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btnRecord"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:contentDescription="Botón para grabar audio"
        android:src="@drawable/record"
        android:backgroundTint="@color/button_selector" />

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pause"
        android:layout_margin="10dp"
        android:backgroundTint="@color/button_selector"
        android:contentDescription="Botón para parar el audio"
        android:enabled="false" />

    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/play"
        android:layout_margin="10dp"
        android:backgroundTint="@color/button_selector"
        android:contentDescription="Botón para iniciar el audio"
        android:enabled="false" />
</LinearLayout>