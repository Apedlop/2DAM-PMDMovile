<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginBottom="16dp"
        android:background="#e0e0e0"
        android:gravity="end"
        android:padding="16dp"
        android:text="@string/visor"
        android:textSize="32sp"
        android:layout_marginTop="70dp"
        android:fontFamily="colour.ttf"
        style="@style/MiVisorStyle"/>

    <GridLayout
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/dividir"
            android:onClick="division"
            style="@style/MyMaterialButtonStyle"
            android:layout_column="3"
            android:text="/" />

        <Button
            android:id="@+id/button_1"
            style="@style/MyMaterialButtonStyle"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            style="@style/MyMaterialButtonStyle"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            style="@style/MyMaterialButtonStyle"
            android:text="3" />

        <Button
            android:id="@+id/multiplicar"
            android:onClick="multipl"
            style="@style/MyMaterialButtonStyle"
            android:text="*" />

        <Button
            android:id="@+id/button_4"
            style="@style/MyMaterialButtonStyleBis"
            android:text="4" />

        <Button
            android:id="@+id/button_5"
            style="@style/MyMaterialButtonStyleBis"
            android:text="5" />

        <Button
            android:id="@+id/button_6"
            style="@style/MyMaterialButtonStyleBis"
            android:text="6" />

        <Button
            android:id="@+id/restar"
            android:onClick="menos"
            style="@style/MyMaterialButtonStyleBis"
            android:text="-" />

        <Button
            android:id="@+id/button_7"
            style="@style/MyMaterialButtonStyleBis"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            style="@style/MyMaterialButtonStyleBis"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            style="@style/MyMaterialButtonStyleBis"
            android:text="9" />

        <Button
            android:id="@+id/potencia"
            android:onClick="pot"
            style="@style/MyMaterialButtonStyleBis"
            android:text="^" />

        <Button
            android:id="@+id/button_0"
            style="@style/MyMaterialButtonStyle"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="0" />

        <Button
            android:id="@+id/borrar"
            android:onClick="eliminar"
            style="@style/MyMaterialButtonStyle"
            android:text="C" />

        <Button
            android:id="@+id/sumar"
            android:onClick="mas"
            style="@style/MyMaterialButtonStyle"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:text="+" />

        <Button
            android:id="@+id/igual"
            style="@style/MyMaterialButtonStyle"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:text="=" />

        <Button
            android:id="@+id/coma"
            style="@style/MyMaterialButtonStyle"
            android:text="," />

    </GridLayout>
</GridLayout>