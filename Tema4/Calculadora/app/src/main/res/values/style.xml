<resources>
    <!-- Estilo para los botones de las dos primeras filas -->
    <style name="MyMaterialButtonStyle">
        <item name="android:background">#FF0000</item>
        <item name="android:gradientRadius">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawableLeft">@drawable/ic_launcher_foreground</item> <!-- Imagen a la izquierda -->
        <item name="android:textColor">#FFFFFF</item> <!-- Color de texto -->
        <item name="android:textSize">18sp</item> <!-- Tamaño de texto -->
    </style>

    <!-- Estilo para los botones de las siguientes filas -->
    <style name="MyMaterialButtonStyleBis">
        <item name="android:backgroundTint">#79E2FF</item> <!-- Color de fondo -->
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item> <!-- Color de texto -->
        <item name="android:textSize">18sp</item> <!-- Tamaño de texto -->
    </style>

    <!-- Estilo para el visor -->
    <style name="MiVisorStyle">
        <item name="android:textColor">#0000FF</item> <!-- Color de texto -->
        <item name="android:fontFamily">fonts/colour.ttf</item> <!-- Fuente personalizada -->
    </style>
</resources>
